<% comments.each do |comment| %>
  <% unless comment.id.nil? %>
    <p><%= link_to"#{comment.user.username}",user_path(comment.user.id) %></p>
    <p>コメント： <%= comment.content %></p>
    <% if comment.user == current_user %>
      <p><%= link_to 'コメントを削除する',rhetoric_comment_path(comment.rhetoric_id, comment.id),method: :delete, remote: true %></p>
      <% end %>
    <% end %>

<% end %>